<h1>Users</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th>#</th>
    <th>Login</th>
    <th>Email</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Country</th>
    <th>City</th>
    <th>Role</th>
  </tr>
</thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= link_to user.login, user %></td>
    <td><%= user.email %></td>
    <td><%= user.full_name %></td>
    <td><%= user.birthday %></td>
    <td><%= user.country %></td>
    <td><%= user.city %></td>
    <td><%= user.role  %></td>
    <% if can? :edit, :user %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
    <% if can? :destroy, :user %>
      <td><%= link_to 'Destroy', user, method: :delete %></td>
    <% end %>
  </tr>
  <% end %>
</table>
<%= will_paginate @users %>

