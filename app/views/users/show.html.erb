<h1><%= @user.email %></h1>
<% if @user.role == 'admin' %>
  <p><small>Admin</small></p>
<% end %>
<% if @user.role == 'moderator' %>
  <p><small>Moderator</small></p>
<% end %>
<div class="row">
  <div class="col-sm-6 col-md-3">
    <p>Login: <b><%= @user.login %></b></p>
    <p>Name: <b><%= @user.full_name %></b></p>
    <p>Date of birth: <b><%= @user.birthday %></b></p>
  </div>
  <div class="col-sm-6 col-md-3">
    <p>ZIP: <b><%= @user.zip %></b></p>
    <p>Country: <b><%= @user.country %></b></p>
    <p>State: <b><%= @user.state %></b></p>
    <p>City: <b><%= @user.city %></b></p>
    <p>Address: <b><%= @user.address %></b></p>
    <p>Latitude: <b><%= @user.latitude %></b></p>
    <p>Longitude: <b><%= @user.longitude %></b></p>
  </div>
  <p>Full address: </p>
</div>
<p>
  <% if can? :update, :user %>
   <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-primary" %> |
  <% end %>
   <%= link_to 'Back', :back, class: "btn btn-primary" %>
</p>